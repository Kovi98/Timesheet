                                <p class="text-muted">@Html.DisplayFor(model => model.TimesheetDetail.Name)</p>
                                <br>
                                <div class="text-muted">
                                    <p class="text-sm">
                                        Vytvořeno
                                        <b class="d-block">@Html.DisplayFor(model => model.TimesheetDetail.CreateTime)</b>
                                    </p>
                                    <p class="text-sm">
                                        @{
                                            string paymentInfo = "Platba";
                                            if (Model.TimesheetDetail.Payment != null && Model.TimesheetDetail.Payment.IsPaid)
                                            {
                                                paymentInfo = "Zaplaceno";
                                            }
                                        }
                                        @paymentInfo
                                        <b class="d-block">
                                            @{
                                                if (Model.TimesheetDetail.Payment != null && Model.TimesheetDetail.Payment.IsPaid)
                                                {
                                                    <a asp-page="/Payment/Index" asp-route-id="@Model.TimesheetDetail.Payment.Id" class="badge badge-success">@Html.DisplayFor(model => model.TimesheetDetail.Payment.PaymentDateTime)</a>

                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Nezaplaceno</span>
                                                }
                                            }
                                        </b>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <!--Tlačítka dole-->
                        <div class="row mt-2">
                            <div class="col-12">
                                <a asp-page="./Print" asp-route-id="@Model.TimesheetDetail.Id" rel="noopener" target="_blank" class="btn btn-default">
                                    <i class="fas fa-print"></i> Tisk
                                </a>
                                <a asp-page="" asp-page-handler="Edit" asp-route-id="@Model.TimesheetDetail.Id" type="button" class="btn btn-info float-right" style="margin-right: 5px;">
                                    <i class="fas fa-pencil-alt"></i> Upravit
                                </a>
                            </div>
                        </div>
