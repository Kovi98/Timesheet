@page
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Registrace";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Registration Page</title>

    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="#">Portál <b>Timesheet</b></a>
        </div>
        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Vytvořit nový účet.</p>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Name" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Surname"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Surname" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Surname" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <!--<div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>-->
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary">Registrovat</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <p class="mb-0">
                    <a asp-page="Login" class="text-center">Už mám účet</a>
                </p>
            </div>
        </div>
    </div>
    <!-- /.register-box -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <!-- Toastr -->
    <script src="~/lib/toastr/toastr.min.js"></script>
    @{
        if (ViewData.ModelState["Error"] != null)
        {
            foreach (var item in ViewData.ModelState["Error"].Errors)
            {
                <script>
                toastr.error("@item.ErrorMessage");
                </script>
            }
        }
        if (ViewData.ModelState["Success"] != null)
        {
            foreach (var item in ViewData.ModelState["Success"].Errors)
            {
                <script>
                    toastr.success("@item.ErrorMessage");
                </script>
            }
        }
    }
</body>
</html>
