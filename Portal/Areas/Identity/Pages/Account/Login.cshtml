@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Přihlášení";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#">Portál <b>Timesheet</b></a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Pro přístup k Portálu je nutné být přihlášen.</p>
                <form id="account" method="post">
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="E-mail" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Heslo" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Pamatovat
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Přihlásit</button>
                        </div>
                    </div>
                </form>
                <p class="mb-0">
                    <a asp-page="Register" class="text-center">Zaregistrovat se</a>
                </p>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <!-- Toastr -->
    <script src="~/lib/toastr/toastr.min.js"></script>
    @{
        if (ViewData.ModelState["Error"] != null)
        {
            foreach (var item in ViewData.ModelState["Error"].Errors)
            {
                <script>
                toastr.error("@item.ErrorMessage");
                </script>
            }
        }
    }
</body>
</html>