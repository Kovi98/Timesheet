@page
@model IndexModel
@{
    ViewData["Title"] = "Uživatelský účet";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h3 class="text-dark"><i class="fas fa-user mr-2"></i> @Html.DisplayFor(model => model.Fullname)</h3>
                <br>
                <div class="row">
                    <div class="col-11">
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <input class="form-control" type="text" value="@Model.Email" disabled/>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-1">
                        <a class="btn btn-info btn-sm" asp-page="/Account/Manage/Email">
                            <i class="fas fa-pencil-alt">
                            </i>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-11">
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <input class="form-control" type="text" value="@Model.Fullname" disabled />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-1">
                        <a class="btn btn-info btn-sm" asp-page="/Account/Manage/Name">
                            <i class="fas fa-pencil-alt">
                            </i>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-11">
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <input class="form-control" type="text" value="*********" disabled />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-1">
                        <a class="btn btn-info btn-sm" asp-page="/Account/Manage/ChangePassword">
                            <i class="fas fa-pencil-alt">
                            </i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
