@page
@model Portal.Areas.Finances.Pages.IndexModel
<!--AJAX POST needed-->
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf

@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(HttpContext).RequestToken;
    }
}

@{
    ViewData["Title"] = "Dotace";
}
@{
    if (ViewData.ModelState["Error"] != null)
    {
        foreach (var item in ViewData.ModelState["Error"].Errors)
        {
            <script>
                toastr.error("@item.ErrorMessage");
            </script>
        }
    }
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Seznam dotačních subjektů</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="dataTable" class="table table-striped table-hover dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th style="width:60%">
                                @Html.DisplayNameFor(model => model.Finance[0].Name)
                            </th>
                            <th style="width:20%">
                                @Html.DisplayNameFor(model => model.Finance[0].CreateTime)
                            </th>
                            <th style="width:20%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Finance)
                        {
                            <tr id="rowId-@Html.DisplayFor(modelItem => item.Id)">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateTime)
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" asp-page="" asp-page-handler="Edit" asp-route-id="@item.Id" asp-fragment="card-edit">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Upravit
                                    </a>
                                    <a id="href-delete-@item.Id" class="btn btn-danger btn-sm" onclick="deleteFinancesDetail(@item.Id)">
                                        <i class="fas fa-trash">
                                        </i>
                                        Smazat
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (Model.IsEditable)
{
    <div id="row-edit" class="row">
        <div class="col-12">
            <div id="card-edit" class="card">
                <div class="card-header">
                    <h3 class="card-title">Editace dotačního subjektu</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        @{
                            if (Model.FinanceDetail != null)
                            {
                                <input type="hidden" asp-for="FinanceDetail.Id" />
                                <input type="hidden" asp-for="FinanceDetail.CreateTime" />
                                <input type="hidden" asp-for="FinanceDetail.RowVersion" />
                            }
                        }
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card card-info">
                                    <div class="card-header">
                                        <h3 class="card-title">Základní informace</h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="FinanceDetail.Name" class="control-label"></label>
                                                    <input asp-for="FinanceDetail.Name" class="form-control" />
                                                    <span asp-validation-for="FinanceDetail.Name" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Tlačítka dole-->
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <input type="submit" value="Uložit" class="btn btn-info float-right" style="margin-right: 5px;" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
}

<!-- Modal - potvrzení smazání záznamu -->
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Odstranění dotačního subjektu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Opravdu chcete odstranit dotační subjekt?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zpět</button>
                <button id="delete-confirm" type="button" class="btn btn-danger" data-dismiss="modal">Odstranit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @foreach (var item in Model.Finance)
    {
        @if (item.Person?.Count == 0)
        {
            <script>
            $(document).ready(function () {
                $('#href-delete-@item.Id').removeAttr('href').addClass('disabled').attr('aria-disabled', 'true');
            });
            </script>
        }
    }
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var dataTableFinance;
        $(document).ready(function () {
            dataTableFinance = $('#dataTable').DataTable({
                "language": {
                    "url": '/lib/datatables-language/cs.json'
                },
                "ordering": true,
                "searching": true,
                "paging": true,
                "responsive": true,
                "lengthChange": true,
                "autoWidth": true,
                "info": false,
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    },
                    {
                        "targets": [3],
                        "orderable": false,
                        "searchable": false
                    }],
                "dom": '<"toolbar">frtip',
                "initComplete": function (settings, json) {
                    $("div.toolbar").html('<a href="/Finances?id=0&amp;handler=Edit#card-edit" class="btn btn-sm btn-info float-left"><i class="nav-icon fas fa-edit"></i> Nový dotační subjekt</a><button class="btn btn-sm btn-default float-left ml-2" onclick="resetTable()"><i class="nav-icon fas fa-filter"></i> Obnovit výchozí filtrování</button>');
                }
            });
        });
    </script>

    <script>
    function deleteFinancesDetail(deleteId) {
        $('#delete-confirm').unbind('click').on('click', function (id) {
            $.ajax({
                type: "POST",
                url: "Finances/Index?handler=Delete",
                data: { id: deleteId },
                headers: {
                    "RequestVerificationToken": '@GetAntiXsrfRequestToken()'
                },
                statusCode: {
                    404: function () {
                        toastr.error("Záznam nebyl nalezen.");
                    }
                },
                success: function (response) {
                    var inputText = "#rowId-".concat(String(deleteId));
                    dataTableFinance.row(inputText).remove().draw();
                    toastr.success('Dotační subjekt byl úspěšně odstraněn.');
                },
            });
        });
        $('#delete-modal').modal('show');
        };
        function resetTable() {
            dataTableFinance.state.clear();
            window.location.reload();
        }
    </script>
}

