@page
@model Portal.Pages.Documents.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DocumentStorage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DocumentStorage.Name" class="control-label"></label>
                <input asp-for="DocumentStorage.Name" class="form-control" />
                <span asp-validation-for="DocumentStorage.Name" class="text-danger"></span>
            </div>
            <div class="form-group custom-file">
                <label asp-for="DocumentUpload" class="control-label"></label>
                <input type="file" asp-for="DocumentUpload" />
                <span asp-validation-for="DocumentUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentStorage.CreateTime" class="control-label"></label>
                <input asp-for="DocumentStorage.CreateTime" class="form-control" />
                <span asp-validation-for="DocumentStorage.CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentStorage.DocumentName" class="control-label"></label>
                <input asp-for="DocumentStorage.DocumentName" class="form-control" />
                <span asp-validation-for="DocumentStorage.DocumentName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DocumentStorage.IsDefault" /> @Html.DisplayNameFor(model => model.DocumentStorage.IsDefault)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

