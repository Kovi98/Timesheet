@{ 
    //For alerts
    ViewData["Error"] = new List<string>();
    ViewData["Warning"] = new List<string>();
    ViewData["Success"] = new List<string>();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <title>@ViewData["Title"] - Portál</title>


    <!-- Styly -->
    <partial name="_Styles" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Top navigace -->
        <partial name="_TopNavigation" />
        <!-- Hlavní navigace -->
        <partial name="_MainNavigation" />

        <!-- Content-wrapper -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="./Index">Portál</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                    <!-- Error alerts-->
                    <div id="error-alert"></div>
                    <!-- Warning alerts-->
                    <div id="warning-alert"></div>
                    <!-- Success alerts-->
                    <div id="success-alert"></div>
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <main role="main" class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
        </div>
        <!-- /.content-wrapper -->
        <!-- footer -->
        <partial name="_Footer" />

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <!-- js skripty -->
    <partial name="_Scripts" />
    @RenderSection("Scripts", required: false)
    @{
        if (((List<string>)ViewData["Error"]).Count > 0)
        {
            foreach (var message in ((List<string>)ViewData["Error"]))
            {
                <script>createError(@message)</script>
            }
        }
        if (((List<string>)ViewData["Warning"]).Count > 0)
        {
            foreach (var message in ((List<string>)ViewData["Warning"]))
            {
                <script>createWarning(@message)</script>
            }
        }
        if (((List<string>)ViewData["Success"]).Count > 0)
        {
            foreach (var message in ((List<string>)ViewData["Success"]))
            {
                <script>createSuccess(@message)</script>
            }
        }
    }
</body>
</html>