@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(HttpContext).RequestToken;
    }
}

@{
    ViewData["Title"] = "Výkaz práce";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Seznam výkazů práce</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>
                                # Číslo výkazu
                            </th>
                            <th>
                                Trenér
                            </th>
                            <th>
                                Začátek
                            </th>
                            <th>
                                Konec
                            </th>
                            <th>
                                Délka
                            </th>
                            <th>
                                Odměna
                            </th>
                            <th>
                                Sazba
                            </th>
                            <th>
                                Sekce
                            </th>
                            <th>
                                Platba
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Timesheet)
                        {
                            <tr id="rowId-@Html.DisplayFor(modelItem => item.Id)">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Person.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTimeFrom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTimeTo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reward)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Job.HourReward)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Person.Section.Name)
                                </td>
                                <td class="project-state">
                                    @{
                                        if (item.Payment != null && item.Payment.IsPayed)
                                        {
                                            <a href="#" class="badge badge-success">@Html.DisplayFor(modelItem => item.Payment.PaymentDateTime)</a>

                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Nezaplaceno</span>
                                        }
                                    }
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" asp-page="" asp-route-id="@item.Id">
                                        <i class="fas fa-folder">
                                        </i>
                                        Zobrazit
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-page="./Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Upravit
                                    </a>
                                    <a class="btn btn-danger btn-sm" onclick="deleteTimesheetDetail(@Html.DisplayFor(modelItem => item.Id))">
                                        <i class="fas fa-trash">
                                        </i>
                                        Smazat
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

