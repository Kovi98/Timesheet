@page
@model Portal.Pages.People.IndexModel

@{
    ViewData["Title"] = "Trenéři";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Seznam trenérů</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th style="text-align: center">
                                Aktivní
                            </th>
                            <th>
                                Jméno
                            </th>
                            <th>
                                Datum narození
                            </th>
                            <th style="text-align: center">
                                Daň
                            </th>
                            <th>
                                Funkce
                            </th>
                            <th>
                                Sekce
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Person)
                        {
                            <tr id="rowId-@Html.DisplayFor(modelItem => item.Id)">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td style="text-align: center">
                                    <div class="icheck-primary">
                                        @Html.CheckBoxFor(modelItem => item.IsActive, new { id = "activeCheckbox", disabled = "" })
                                        <label for="activeCheckbox"></label>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateBirth)
                                </td>
                                <td style="text-align: center">
                                    <div class="icheck-primary">
                                        @Html.CheckBoxFor(modelItem => item.HasTax, new { id = "taxCheckbox", disabled="" })
                                        <label for="taxCheckbox"></label>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Job.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Section.Name)
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" asp-page="" asp-route-id="@item.Id" asp-fragment="card-detail">
                                        <i class="fas fa-folder">
                                        </i>
                                        Zobrazit
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-page="" asp-page-handler="Edit" asp-route-id="@item.Id" asp-fragment="card-edit">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Upravit
                                    </a>
                                    <a class="btn btn-danger btn-sm" onclick="deletePersonDetail(@item.Id)">
                                        <i class="fas fa-trash">
                                        </i>
                                        Smazat
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<!-- Modal - potvrzení smazání záznamu -->
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Odstranění výkazu práce</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Opravdu chcete odstranit záznam výkazu práce?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zpět</button>
                <button id="delete-confirm" type="button" class="btn btn-danger" data-dismiss="modal">Odstranit</button>
            </div>
        </div>
    </div>
</div>
